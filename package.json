{
  "name": "a-font-face-off",
  "private": true,
  "version": "0.0.0",
  "description": "Build scripts for A Font Face-off (web-ext)",
  "scripts": {
    "prebuild": "node scripts/set-debug.js false",
    "build": "web-ext build",
    "postbuild": "node scripts/set-debug.js true",
    "build:latest": "npm run build && cp web-ext-artifacts/*.zip web-ext-artifacts/latest.xpi",
    "gf:update": "node scripts/update-gf-metadata.js",
    "lint": "eslint --no-warn-ignored src/*.js scripts/",
    "test": "node --test 'tests/**/*.test.js'",
    "test:integration": "npm run build:latest && node --test 'tests/**/*.itest.js'"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "selenium-webdriver": "^4.40.0",
    "web-ext": "^9.2.0"
  }
}
