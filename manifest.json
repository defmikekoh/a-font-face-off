{
  "manifest_version": 2,
  "name": "A Font Face-off",
  "version": "1.0.0",
  "description": "Compare fonts side by side",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "A Font Face-off",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ],



  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com https://fonts.cdnfonts.com; font-src 'self' https://fonts.gstatic.com https://static.files.bbci.co.uk https://fonts.cdnfonts.com;",

  


  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "applications": {
    "gecko": {
      "id": "a-font-face-off@example.com",
      "strict_min_version": "68.0"
    }
  }
}
