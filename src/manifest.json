{
  "manifest_version": 2,
  "name": "A Font Face-off",
  "version": "1.0.0",
  "description": "Compare fonts side by side",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "A Font Face-off",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "identity",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],



  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["left-toolbar.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "whatfont_core.js"],
      "run_at": "document_idle"
    }
  ],

  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com; font-src 'self' data: blob: https:;",

  "web_accessible_resources": [
    "wf.css",
    "left-toolbar-iframe.html",
    "left-toolbar-iframe.js",
    "icons/featherIcons/unhide.svg",
    "icons/heroIcons/unhide.svg"
  ],




  "background": {
    "scripts": ["config-utils.js", "css-generators.js", "gdrive-config.js", "background.js"],
    "persistent": false
  },

  "applications": {
    "gecko": {
      "id": "a-font-face-off@example.com",
      "strict_min_version": "68.0"
    }
  }
  ,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
